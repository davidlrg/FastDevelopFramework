<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MsgMainActivity"
        android:orientation="vertical">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="this is message!"
            android:gravity="center_horizontal"
    />
    <Button
            android:id="@+id/bt_message_to_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="跳转到main"/>
    <Button
            android:id="@+id/bt_message_to_mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="跳转到mine"/>
    <Button
            android:id="@+id/bt_message_to_found"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="跳转到found"/>
    <Button
            android:id="@+id/bt_message_to_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="跳转到contacts"/>
</LinearLayout>